@{
    ViewBag.Title = "RelationshipInfoScreen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section data-ng-app="RelationshipInfoScreenApp" data-ng-controller="RelationshipInfoScreenController" data-ng-cloak>



    <h2>Relationship Info Screen</h2>


    <div class="row">
        <div class="col col-md-3 " ng-repeat="app in applications">
            <div class="text-center">
                <i class="bi bi-person-circle "></i>
                <img src="~/wwwroot/Images/person-circle.svg" height="200" width="200"
                     class="img-fluid  img-thumbnail rounded mx-auto d-block"
                     ng-click="isMemberSelected(app)"
                     ng-class="{'bg-primary': app.isSelected}"
                     alt="A">
                {{app.firstName}}
            </div>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <h2>SAMPLE's Relationships</h2>
    </div>
    <div class="row" ng-repeat="app in appRelationships()">
        <div class="col col-md-3">
            <h4>RelationShip to {{app.firstName}}</h4>
        </div>
        <div class="col col-md-3">
            <select class="form-select" aria-label="Default select example">
                <option selected>Select</option>
                <option value="{{r.RelationId}}" ng-repeat="r in relations" relations>{{r.name}}</option>
            </select>
        </div>
    </div>




    <div class="row mt-2">
        <div class="col">
            <div class="btn-group float-start">
                <button class="btn btn-success">
                    @Html.ActionLink("Save and Exit", "Search")
                </button>
            </div>
        </div>
        <div class="col ">
            <div class="btn-group float-xxl-end">
                <button class="btn btn-success" aria-current="page">
                    @Html.ActionLink("Back", "HouseholdInfo")
                </button>
                <button class="btn btn-success">
                    @Html.ActionLink("Submit", "ConfirmationScreen")
                </button>
            </div>
        </div>
    </div>

</section>
@section Scripts {
    <script src="~/view-resources/Home/RelationshipInfoScreen.js" asp-append-version="true"></script>
}
@section Styles {
    <link href="~/view-resources/home/relationshipinfoscreen.css" rel="stylesheet" asp-append-version="true" />
}

